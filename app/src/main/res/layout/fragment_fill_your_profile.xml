<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.FillYourProfileFragment"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="32dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="32dp"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заполни свой профиль"
                android:textSize="21sp"
                android:textColor="#202244"
                android:layout_marginStart="8dp"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="42dp"
            app:cardElevation="0dp"
            android:backgroundTint="@color/transparent"
            >
            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile_default"

                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:layout_marginVertical="28dp"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:translationZ="1dp"
                android:layout_margin="8dp"
                >
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/et_white_style"
                    android:hint="Полное Имя"
                    android:textSize="14sp"
                    android:textColorHint="#505050"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:translationZ="1dp"
                android:layout_margin="8dp"
                >
                <EditText
                    android:id="@+id/nick_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/et_white_style"
                    android:hint="Nick Name"
                    android:textSize="14sp"
                    android:textColorHint="#505050"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/birthday_click"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:translationZ="1dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/white"
                >
                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_white_style"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:hint="Дата Рождения"
                    android:textSize="14sp"
                    android:textColorHint="#505050"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical|start"
                    android:drawablePadding="8dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:translationZ="1dp"
                android:layout_margin="8dp"
                >
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/et_white_style"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="8dp"
                    android:hint="Email"
                    android:textSize="14sp"
                    android:textColorHint="#505050"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:translationZ="1dp"
                android:layout_margin="8dp"
                >
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/et_white_style"
                    android:hint="Номер телефона"
                    android:textSize="14sp"
                    android:textColorHint="#505050"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:translationZ="1dp"
                android:layout_margin="8dp"
                >
                <Spinner
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/et_white_style"
                    android:textSize="14sp"
                    android:textColorHint="#505050"
                    android:paddingHorizontal="16dp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/btn_round_white"
            android:text="Продолжить"
            android:background="@drawable/btn_with_arrow_accent_style"
            android:paddingStart="22dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="32dp"
            />
    </LinearLayout>

</ScrollView>