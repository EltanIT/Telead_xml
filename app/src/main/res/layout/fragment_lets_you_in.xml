<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.LetsYouInFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal|bottom"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let’s you in"
        android:textSize="24sp"
        android:textColor="#202244"
        android:textAlignment="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        >
        <LinearLayout
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_google"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Продолжить с Google"
                android:textSize="16sp"
                android:textColor="#545454"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_apple"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Продолжить с Apple"
                android:textSize="16sp"
                android:textColor="#545454"
                android:textAlignment="center"
                />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="( или )"
        android:textSize="15sp"
        android:textColor="#545454"
        android:textAlignment="center"
        android:layout_marginTop="42dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/btn_round_white"
        android:text="Войти в свой аккаунт"
        android:background="@drawable/btn_with_arrow_accent_style"
        android:paddingStart="22dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:drawablePadding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="22dp"
        android:textAlignment="textStart"
        android:layout_marginHorizontal="32dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нет аккаунта? "
            android:textSize="14sp"
            android:textColor="#545454"
            android:textAlignment="center"
            android:layout_marginTop="32dp"
            />
        <TextView
            android:id="@+id/registartion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РЕГИСТРАЦИЯ"
            android:textSize="14sp"
            android:textColor="@color/accent"
            android:textAlignment="center"
            android:layout_marginTop="32dp"
            />
    </LinearLayout>

</LinearLayout>