<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.CreateNewPasswordFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingVertical="32dp"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создай новый пароль"
            android:textSize="21sp"
            android:textColor="#202244"
            android:layout_marginStart="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingBottom="32dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создайте Свой Новый Пароль"
            android:textAlignment="textStart"
            android:textColor="#202244"
            android:textSize="19sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_white_style"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawableRight="@drawable/ic_eye_close"
            android:paddingHorizontal="16dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:hint="Пароль"
            android:textAlignment="textStart"
            android:drawablePadding="8dp"
            android:textColorHint="#505050"
            android:password="true"
            />
        <EditText
            android:id="@+id/replay_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_white_style"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawableRight="@drawable/ic_eye_close"
            android:paddingHorizontal="16dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:hint="Пароль"
            android:textAlignment="textStart"
            android:drawablePadding="8dp"
            android:textColorHint="#505050"
            android:password="true"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/btn_round_white"
            android:text="Продолжить"
            android:background="@drawable/btn_with_arrow_accent_style"
            android:paddingStart="22dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="42dp"
            android:textAlignment="center"
            />

    </LinearLayout>


</FrameLayout>