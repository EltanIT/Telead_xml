<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.FilterFragment"
    android:background="@color/activity_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="32dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="32dp"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фильтры"
                android:textSize="21sp"
                android:textColor="#202244"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Очистить"
                android:textSize="16sp"
                android:textColor="#545454"
                android:layout_marginStart="8dp"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="32dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Категории"
                    android:textSize="18sp"
                    android:textColor="#202244"
                    android:lineHeight="26sp"
                    android:layout_marginTop="32dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sub_categories_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_filter"
                    tools:itemCount="6"
                    android:paddingHorizontal="22dp"
                    android:nestedScrollingEnabled="false"
                    app:fastScrollEnabled="false"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Уровни"
                    android:textSize="18sp"
                    android:textColor="#202244"
                    android:lineHeight="26sp"
                    android:layout_marginTop="28dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/levels_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_filter"
                    tools:itemCount="4"
                    android:paddingHorizontal="22dp"
                    android:nestedScrollingEnabled="false"
                    app:fastScrollEnabled="false"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Цена"
                    android:textSize="18sp"
                    android:textColor="#202244"
                    android:lineHeight="26sp"
                    android:layout_marginTop="28dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/price_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_filter"
                    tools:itemCount="2"
                    android:paddingHorizontal="22dp"
                    android:nestedScrollingEnabled="false"
                    app:fastScrollEnabled="false"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Особенности"
                    android:textSize="18sp"
                    android:textColor="#202244"
                    android:lineHeight="26sp"
                    android:layout_marginTop="28dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/features_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_filter"
                    tools:itemCount="4"
                    android:paddingHorizontal="22dp"
                    android:nestedScrollingEnabled="false"
                    app:fastScrollEnabled="false"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Рейтинг"
                    android:textSize="18sp"
                    android:textColor="#202244"
                    android:lineHeight="26sp"
                    android:layout_marginTop="28dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rating_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_filter"
                    tools:itemCount="4"
                    android:paddingHorizontal="22dp"
                    android:nestedScrollingEnabled="false"
                    app:fastScrollEnabled="false"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Продолжительность Видео"
                    android:textSize="18sp"
                    android:textColor="#202244"
                    android:lineHeight="26sp"
                    android:layout_marginTop="28dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/video_duration_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_filter"
                    tools:itemCount="4"
                    android:paddingHorizontal="22dp"
                    android:nestedScrollingEnabled="false"
                    app:fastScrollEnabled="false"
                    />
            </LinearLayout>
        </ScrollView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableRight="@drawable/btn_round_white"
            android:text="Применить"
            android:background="@drawable/btn_with_arrow_accent_style"
            android:paddingStart="22dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:maxLines="1"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>



</FrameLayout>