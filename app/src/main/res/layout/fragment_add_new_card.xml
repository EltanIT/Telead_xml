<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.AddNewCardFragment"
    android:background="@color/activity_back"
    android:overScrollMode="never"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="32dp"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профиль"
                android:textSize="21sp"
                android:textColor="#202244"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_card"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:paddingHorizontal="28dp"
            android:paddingBottom="8dp"
            android:paddingTop="27dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sim_card"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="38dp"
                >
                <TextView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:letterSpacing="0.12"
                    android:text="1234 5678 8765 0876"
                    android:textStyle="bold"
                    android:gravity="top"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:text="Годен\nДо"
                        android:textStyle="bold"
                        android:gravity="top"
                        android:lineSpacingExtra="-2sp"
                        />
                    <TextView
                        android:id="@+id/valid_thru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        tools:text="12/30"
                        android:textStyle="bold"
                        android:gravity="top"
                        android:layout_marginStart="5dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    tools:text="Timmy C. Hernandez"
                    android:textStyle="bold"
                    android:gravity="top"
                    android:letterSpacing="0.09"
                    android:layout_marginTop="12dp"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Имя На Карте*"
                android:textSize="14sp"
                android:textColor="#202244"
                android:lineHeight="18sp"
                android:layout_marginHorizontal="22dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:translationZ="1dp"
                android:layout_margin="8dp"
                >
                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/et_white_style"
                    android:textSize="14sp"
                    android:textColorHint="#505050"
                    android:paddingHorizontal="16dp"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Номер Карты*"
                android:textSize="14sp"
                android:textColor="#202244"
                android:lineHeight="18sp"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="16dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:translationZ="1dp"
                android:layout_margin="8dp"
                >
                <EditText
                    android:id="@+id/number_et"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/et_white_style"
                    android:textSize="14sp"
                    android:textColorHint="#505050"
                    android:paddingHorizontal="16dp"
                    />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="дата истечения срока действия*"
                        android:textSize="14sp"
                        android:textColor="#202244"
                        android:lineHeight="18sp"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginTop="16dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:translationZ="1dp"
                        android:layout_margin="8dp"
                        >
                        <EditText
                            android:id="@+id/date_et"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/et_white_style"
                            android:textSize="14sp"
                            android:textColorHint="#505050"
                            android:paddingHorizontal="16dp"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="CVV*"
                        android:textSize="14sp"
                        android:textColor="#202244"
                        android:lineHeight="18sp"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginTop="16dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:translationZ="1dp"
                        android:layout_margin="8dp"
                        >
                        <EditText
                            android:id="@+id/cvv_et"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/et_white_style"
                            android:textSize="14sp"
                            android:textColorHint="#505050"
                            android:paddingHorizontal="16dp"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/btn_round_white"
            android:text="Добавить Новую Карту"
            android:background="@drawable/btn_with_arrow_accent_style"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            />


    </LinearLayout>
</ScrollView>