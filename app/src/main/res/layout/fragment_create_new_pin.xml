<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.CreateNewPinFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="32dp"
        android:paddingTop="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создайте новый пин-код"
            android:textSize="21sp"
            android:textColor="#202244"
            android:layout_marginStart="8dp"
            />
    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:layout_gravity="bottom"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавьте Pin-код, чтобы сделать Вашу учетную запись более безопасной"
            android:textSize="14sp"
            android:textColor="#545454"
            android:textAlignment="center"
            android:layout_marginHorizontal="42dp"
            />

        <com.chaos.view.PinView
            android:id="@+id/pin_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinWidget.PinView"
            app:itemCount="4"
            app:viewType="rectangle"
            android:cursorVisible="true"
            android:inputType="number"
            android:focusable="true"
            android:enabled="true"
            android:layout_marginTop="64dp"


            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/btn_round_white"
            android:text="Продолжить"
            android:background="@drawable/btn_with_arrow_accent_style"
            android:paddingStart="22dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="64dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="32dp"

            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="3"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"
            >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:text="1"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:text="2"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:text="3"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="28dp"
                >
                <TextView
                    android:text="4"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:text="5"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:text="6"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="28dp"
                >
                <TextView
                    android:text="7"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:text="8"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:text="9"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="28dp"
                >
                <TextView
                    android:text="*"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:text="0"
                    android:layout_weight="1"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <ImageView
                    android:src="@drawable/ic_delete"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>