<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.SearchResultListFragment"
    android:background="@color/activity_back"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="32dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="32dp"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                />
            <TextView
                android:id="@+id/name_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Онлайн Курсы"
                android:textSize="21sp"
                android:textColor="#202244"
                android:layout_marginStart="8dp"
                />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_white_style"
            android:drawableRight="@drawable/ic_filter"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:paddingHorizontal="16dp"
            android:hint="Поиск.."
            android:layout_marginTop="32dp"
            android:textAlignment="textStart"
            android:translationZ="3dp"
            android:layout_marginHorizontal="32dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="32dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:textColor="#202244"
                android:text="Курсы"
                android:textSize="15sp"
                android:layout_marginEnd="8dp"
                android:id="@+id/courses"
                android:background="@drawable/categories_home_btn_style"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:paddingHorizontal="16dp"
                android:textAllCaps="false"
                android:layout_weight="1"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:textColor="#202244"
                android:text="Наставники"
                android:textSize="15sp"
                android:layout_marginStart="8dp"
                android:id="@+id/mentors"
                android:background="@drawable/categories_home_btn_style"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:paddingHorizontal="16dp"
                android:textAllCaps="false"
                android:layout_weight="1"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginTop="28dp"
            android:paddingHorizontal="32dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Результаты по "
                android:textColor="#202244"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'Graphic Design'"
                android:textColor="#0961F5"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/request_text"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/history_btn"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24554"
                    android:textAllCaps="true"
                    android:textColor="#0961F5"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:id="@+id/count_found"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" НАЙДЕНО"
                    android:textAllCaps="true"
                    android:textColor="#0961F5"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow"
                    android:layout_marginStart="8dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager"
            />
    </LinearLayout>

</FrameLayout>